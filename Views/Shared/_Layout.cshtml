<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ForeignLangTutorsMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand">ForeignLangTutors</a>
            
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Таблицы
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Students" asp-action="Index">Ученики</a>
                            <a class="dropdown-item" asp-controller="Tutors" asp-action="Index">Репетиторы</a>
                            <a class="dropdown-item" asp-controller="Rooms" asp-action="Index">Залы</a>
                            <a class="dropdown-item" asp-controller="Groups" asp-action="Index">Группы</a>
                            <a class="dropdown-item" asp-controller="Classes" asp-action="Index">Занятия</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Статистика
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Statistics" asp-action="GroupsOccupancy">Заполненость групп</a>
                            <a class="dropdown-item" asp-controller="Statistics" asp-action="StudentStats">Статистика учеников</a>
                            <a class="dropdown-item" asp-controller="Statistics" asp-action="TutorStats">Статистика репетиторов</a>
                            <a class="dropdown-item" asp-controller="Statistics" asp-action="RoomStats">Статистика залов</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Отчеты
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Reports" asp-action="GroupStudents">Отчет "Состав групп"</a>
                            <a class="dropdown-item" asp-controller="Reports" asp-action="StudentsSchedule">Отчет "График учеников"</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Automatization" asp-action="Index">
                            Автоматизация
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
